2698         require(proposal.totalStakes <= uint256(0x100000000000000000000000000000000).sub(proposal.daoBountyRemain),
2699                 "total stakes is too high");
2700 
2701         if (_vote == YES) {
2702             staker.amount4Bounty = staker.amount4Bounty.add(amount);
2703         }
